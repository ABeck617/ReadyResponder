<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title ||= "BEMA" %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if current_user then %>
      <%= render "layouts/top-menu" %>
    <% end %>
    <div class="container">
      <div class="row">
        <div id="sidebar" class="span2">
          <%= yield :sidebar %>
          <% flash.each do |name,msg| %>
            <%= content_tag :div, msg, id: "flash_#{name}" %>
          <% end %>
          <%= content_tag :p, flash[notice], :class => "notice" if flash[notice] %>
          <%= content_tag :p, flash[alert], :class => "alert" if flash[alert] %>
        </div>
        <div class="span10">
          <%= yield %></br></br>
          Version 0.76
          <%= current_user.email unless current_user.nil? %>
          <%= current_user.roles.map{ |role| role.name.to_s } unless current_user.nil? %>
        </div>
      </div>  
    </div>
  </body>
</html>

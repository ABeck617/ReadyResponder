<table id="items" class="generic_datatable datatable display table table-striped table-bordered" >
  <caption><h3><%= @page_title %></h3></caption>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Location</th>
      <th>Category</th>
      <th>Serial 1</th>
      <th>Serial 2</th>
      <th>Serial 3</th>
      <th>Owner</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.icsid %></td>
        <td><%= link_to item.model + " " + item.name, item_path(item) %></td>
      	<td><%= item.location.name if item.location %></td>
      	<td><%= item.category %></td>
      	<td><%= item.serial1 %></td>
      	<td><%= item.serial2 %></td>
        <td><%= item.serial3 %></td>
        <td><%= item.person.fullname unless item.person_id.blank? %></td>
      	<td><%= item.status %></td>
      	<td><%= link_to 'Edit', edit_item_path(item), :class => 'btn btn-mini btn-primary' unless cannot? :edit, item %></td>
      </tr>
    <% end %>
  </tbody>
</table>


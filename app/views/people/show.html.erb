<% content_for :sidebar do %>
<%= link_to 'Edit Person', edit_person_path(@person), :class => 'btn btn-primary' %></br></br>
<%= link_to 'New Cert', new_person_cert_path(@person), :class => 'btn' %>
<% end %>

<p id="notice"><%= notice %></p>

<p><h2><%= @person.fullname %> (<%= @person.icsid %>)</h2></p>

<p>DOB <%= @person.date_of_birth %> (<%= @person.age %>)</p>
<p>Start Date <%= @person.start_date %> (<%= distance_of_time_in_words(((@person.end_date) || Date.today), @person.start_date) if @person.start_date %>)</p>
<p>
  <b>Status:</b>
  <span class="badge <%= 'badge-success' if @person.status == 'Active' %>">
    <%= @person.status %>
  </span>
</p>
<%= @person.title_order %>

<div>
  <% @person.titles.each do |title| %>
    <% if @person.qualified?(title.name) then %>
      <h3><a href="#">
	Qualified for <%= title.name %>
      </a></h3>
      <div>No missing certifications</div>
    <% else %>
      <h3><a href="#">
	NOT qualified for <%= title.name %>
      </a></h3>
      <div>
	<ul>
	<% (title.skills - @person.skills).each do |skill| %>
	  <li><%= skill.name  %> skill needed</li>
	<% end %>
	</ul>
      </div>
    <% end %>
  <% end %>
</div>


</br></br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
	<th>Skills</th>
    </tr>
  </thead>
  <tbody>
    <%= render(@person.skills.uniq) || raw("<tr><td>No skills yet !</td></tr>") %>
  </tbody>
</table>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
	<th>Courses</th>
    </tr>
  </thead>
  <tbody>
    <%= render(@person.courses.uniq) || raw("<tr><td>No courses yet !</td></tr>") %>
  </tbody>
</table>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
	<th>Certifications</th>
    </tr>
  </thead>
  <tbody>
      <%= render(:partial => "certs/cert", :collection => Cert.find_all_by_person_id(@person.id)) || raw("<tr><td>No certifications yet !</td></tr>") %>
  </tbody>
</table>



<% content_for :parking do %>
    <table class="table table-striped">
      <thead>
	<tr>
	    <th>Skills Missing for Police</th>
	</tr>
      </thead>
      <tbody>
	<%#= render (Title.find(1).skills - @person.skills) %>
      </tbody>
    </table>
    <span class="badge badge-important">This comes out red
    <span class="badge badge-warning">
      Person qualified, but some certification is expiring soon
    </span></br>
<% end %>

<% content_for :sidebar do %>
<%= link_to 'Edit Person', edit_person_path(@person), :class => 'btn btn-primary' %></br></br>
<%= link_to 'New Cert', new_person_cert_path(@person), :class => 'btn' %>
<% end %>

<p id="notice"><%= notice %></p>

<p><%= @person.fullname %> (<%= @person.icsid %>)</p>

<p>DOB <%= @person.date_of_birth %> (<%= @person.age %>)</p>
<p>Start Date <%= @person.start_date %></p>
<p>
  <b>Status:</b>
  <span class="badge <%= 'badge-success' if @person.status == 'Active' %>">
    <%= @person.status %>
  </span>
</p>

<% @person.titles.each do |title| %>
  <% if @person.qualified?(title.title) then %>
    <span class="badge badge-success">
      Person qualified for <%= title.title %>
    </span>
  <% else %>
    <span class="badge badge-important">
      Person NOT qualified for <%= title.title %>
    </span>
  <% end %></br></br>
<% end %>

</br></br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
	<th>Skills</th>
    </tr>
  </thead>
  <tbody>
    <%= render @person.skills.uniq %>
  </tbody>
</table>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
	<th>Courses</th>
    </tr>
  </thead>
  <tbody>
    <%= render @person.courses.uniq %>
  </tbody>
</table>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
	<th>Certifications</th>
    </tr>
  </thead>
  <tbody>
    <td>
      <%= render @person.certs.unscoped %>
    </td>
  </tbody>
</table>



<% content_for :parking do %>
    <table class="table table-striped">
      <thead>
	<tr>
	    <th>Skills Missing for Police</th>
	</tr>
      </thead>
      <tbody>
	<%= render (Title.find(1).skills - @person.skills) %>
      </tbody>
    </table>
    
    <span class="badge badge-warning">
      Person qualified, but some certification is expiring soon
    </span></br>
<% end %>

      <fieldset>
        <legend>Channel information</legend>
        <%= f.input :name, placeholder: 'Work Cellphone or Home EMail' %>
        <%= f.input :content, placeholder: 'user@domain.com or 9786670900'  %>
        <%= f.input :priority, :as => :select, :collection => Channel::PRIORITIES  %>
        <%= f.input :category, :as => :select, :collection => Channel::CATEGORIES  %>
        <%= f.input :carrier, :as => :select, :collection => Channel::CARRIERS %>
        <%= f.input :usage, :as => :select, :collection => Channel::USAGES %>
        <%= f.check_box :_destroy %><%= f.label :_destroy, "Remove Channel" %>
      </fieldset>
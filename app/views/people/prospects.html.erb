<% content_for :sidebar do %>
  <center><h3>Listing Prospects</h3></br>
  <%= link_to 'New Person', new_person_path, :class => 'btn' unless cannot? :create, Person %></center>
<% end %>

<table id="prospects" class="generic_datatable datatable display table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
      	<td><%= link_to person.fullname, person %></td>	
      	<td><%= person.department %></td>
      	<td><%= link_to 'Edit', edit_person_path(person), :class => "btn btn-primary btn-mini" if can? :update, person %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
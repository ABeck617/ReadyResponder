<% content_for :sidebar do %>
  <center><h2>Listing People</h2></br>
  <%= link_to 'New Person', new_person_path, :class => 'btn' if can? :create, Person %></center>
<% end %>
  

<table id="people" class="datatable display table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Badge</th>
      <th>Title</th>
      <th>Name</th>
      <th>Duration</th>
      <th>Mobile</th>
      <th>E-Mail</th>
      <th>Dept</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
	<td><%= person.icsid %></td>
	<td><%= person.shortrank %></td>
	<td><%= link_to person.fullname, person %></td>	
	<td><%= distance_of_time_in_words(((person.end_date) || Date.today), person.start_date) if person.start_date %></td>
  <td><%= number_to_phone(person.channels.mobile.first.content) unless person.channels.mobile.blank? %></td>
  <td><%= person.channels.email.first.content unless person.channels.email.blank? %></td>
  <td><%= person.department %></td>
	<td><%= link_to 'Edit', edit_person_path(person), :class => "btn btn-primary btn-mini" if can? :update, person %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<%= simple_form_for(@course, :html => {:class => 'form-horizontal' }) do |f| %>

    <%= f.input :name %>
    <%= f.input :status, :as => :select, :collection => ['Active', 'Inactive'] %>
    <%= f.input :description, :rows => '10' %>
    <%= f.association :skills, hint: 'Multiple select - Use CTRL key' %>
    <%= f.input :category, :as => :select, :collection => Course::CATEGORY_CHOICES %>
    <%= f.input :duration, :hint => "in hours" %>
    <%= f.input :term, :hint => "in months" %>
    <%= f.input :comments %>


    <%= f.button :submit %>
<% end %>

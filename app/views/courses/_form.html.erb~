<%= semantic_form_for @course do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :status, :as => :select, :collection => ['Active', 'Inactive'] %>
    <%= f.input :description %>
    <%= f.input :comments %>
    <%= f.input :category, :as => :select, :collection => Course::CATEGORY_CHOICES %>
    <%= f.input :duration, :hint => "in hours" %>
    <%= f.input :term, :hint => "in months" %>
    <%= f.input :required_for_pd, :as => :check_boxes, :collection => ['Police'] %>
    <%= f.input :required_for_cert, :as => :check_boxes, :label => 'CERT' %>
    <%= f.input :required_for_sar, :as => :check_boxes, :label => 'SAR' %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>

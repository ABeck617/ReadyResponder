<% content_for :sidebar do %>
  <center><h1>Listing Courses</h1></br>
  <%= link_to 'New Course', new_course_path, :class => 'btn' %></center>
<% end %>


<table id="courses" class="datatable display table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Duration</th>
      <th>Term</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
	<td><%= link_to course.name, course %></td>
	<td><%= course.description %></td>
	<td><%= course.category %></td>
	<td><%= course.duration %></td>
	<td><%= course.term %></td>
	<td><%= link_to 'Edit', edit_course_path(course), :class => 'btn btn-mini btn-primary' %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Duration</th>
      <th>Term</th>
      <th></th>
    </tr>
  </tfoot>

</table>


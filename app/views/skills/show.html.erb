<p id="notice"><%= notice %></p>
<% content_for :sidebar do %>

  <h2>Skill<br/><%= @skill.name %></h2>

  <%= link_to 'Edit', edit_skill_path(@skill), class: 'btn btn-primary', style: 'width: 100%' %>
  <%#= link_to 'Destroy', @skill, method: :delete, class: 'btn btn-danger', style: 'width: 100%', data: { confirm: 'Are you sure?' } %><br/><br/>
  <%= link_to 'Skills Listing', skills_path, class: 'btn btn-primary', style: 'width: 100%' %>
<% end %>
<p>
  <b>Status:</b>
  <%= @skill.status %>
</p>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Courses That Satisfy This Skill</th>
    </tr>
  </thead>
  <tbody>
    <%= render @skill.courses %>
  </tbody>
</table>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Titles That Require This Skill</th>
    </tr>
  </thead>
  <tbody>
    <%= render @skill.titles %>
  </tbody>
</table>


<% content_for :sidebar do %>
  <%= link_to 'Return to Listing', timeslots_path, :class => 'btn' %></br></br>
  <%= link_to 'Edit Timeslot', edit_timeslot_path(@timeslot), :class => 'btn btn-primary' if can? :edit, @timeslot  %>
  </br></br>
<% end %>


<p>
  <b>Person:</b>
  <%= link_to @timeslot.person.fullname, @timeslot.person %>
</p>

<p>
  <b>Event:</b>
  <%= link_to @timeslot.event.description, @timeslot.event %>
</p>

<p>
  <b>Category:</b>
  <%= @timeslot.category %>
</p>

<p>
  <b>Status:</b>
  <%= @timeslot.intention %>
</p>

<p>
  <b>Intended Start</b>
  <%= @timeslot.intended_start_time.to_s(:short) %>
</p>

<p>
  <b>Intended End</b>
  <%= @timeslot.intended_end_time.to_s(:short) %>
</p>

<p>
  <b>Intended Duration:</b>
  <%= @timeslot.intended_duration %>
</p>

<p>
  <b>Actual Start</b>
  <%= @timeslot.actual_start_time.to_s(:short) %>
</p>

<p>
  <b>Actual End</b>
  <%= @timeslot.actual_end_time.to_s(:short) %>
</p>

<p>
  <b>Duration:</b>
  <%= @timeslot.actual_duration %>
</p>
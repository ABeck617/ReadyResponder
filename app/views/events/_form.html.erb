<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :status, :as => :select, :collection => Event::STATUS_CHOICES  %>
    <%= f.input :category, :as => :select, :collection => Event::CATEGORY_CHOICES %>
    <%= f.association :course %>
    <%= f.input :instructor %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%#= f.datetime_picker 'start_date', :dateFormat => "yy-mm-dd" %>
    <%= f.input :start_time, :as => :string, :input_html => {:class => "datepicker",  :size => 11 }  %>
    <%= f.input :end_time, :as => :string, :input_html => {:class => "datepicker", :size => 11 }  %>
    <%= f.input :duration %>
    <%= f.association :people %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= semantic_form_for @cert do |f| %>
  <%= f.inputs do %>
    <%= f.input :person %>
    <%= f.input :course %>
    <%= f.input :status, :as => :select, :collection => ['Active', 'Inactive'] %>
    <%= f.input :level, :input_html => { :size => 22 }  %>
    <%= f.input :cert_number, :input_html => { :size => 22 }  %>
    <%= f.input :issued_date, :as => :string, :input_html => { :size => 11 }  %>
    <%= f.input :expiration_date, :hint => 'Leave blank to set from course default', :as => :string, :input_html => { :size => 11 }  %>
    <%= f.input :comments %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :label => 'Create Certification' %>
  <% end %>
<% end %>

<%= semantic_form_for @cert do |f| %>
  <%= f.inputs do %>
    <%= f.input :person %>
    <%= f.input :course %>
    <%= f.input :status, :as => :select, :collection => ['Active', 'Inactive'] %>
    <%= f.input :level %>
    <%= f.input :cert_number %>
    <%= f.input :issued_date, :as => :string, :input_html => { :size => 11 }  %>
    <%= f.input :expiration_date, :as => :string, :input_html => { :size => 11 }  %>
    <%= f.input :comments %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>

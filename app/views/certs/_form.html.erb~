<%= semantic_form_for @cert do |f| %>
  <%= f.inputs do %>
    <%= f.input :person %>
    <%= f.input :course %>
    <%= f.input :status %>
    <%= f.input :category %>
    <%= f.input :level %>
    <%= f.input :cert_number %>
    <%= f.input :issued_date %>
    <%= f.input :expiration_date %>
    <%= f.input :comments %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
